<html>
  <head>
    <title>Address Book</title>
  </head>
  <body>
    <h1>Address Book</h1>
    <hr>
    <div>
      <form action=>
        <div>
          <label for='addname'>Name:</label>
          <input id='addname' name='addname' type='text'>
        </div>
        <div>
          <label for='addphonenumber'>Phone Number:</label>
          <input id='addphonenumber' name='addaddphonenumber' type='text'>
        </div>
        <div>
          <label for='addaddress'>Address</label>
          <input id='addaddress' name='addaddress' type='text'>
        </div>
        <button type=submit class='btn-submit'>Submit</button>
      </form>
      {% if contact is not empty %}
        <p>List of Contacts:</p>
        <ul>
          {% for new_contact in contact %}
          <li>{{ new_contact.getName }}</li>
          <li>{{ new_contact.getPhoneNumber }}</li>
          <li>{{ new_contact.getAddress }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
    <div>
      <form action>
        <button type='submit' class='button btn-danger'>Delete all contacts</button>
      </form>
    </div>
  </body>
</html>
